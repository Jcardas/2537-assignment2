<header class="bg-white dark:bg-gray-800">
    <div class="mx-auto flex h-16 max-w-screen-xl items-center gap-8 px-4 sm:px-6 lg:px-8">
        <a class="block text-teal-600 dark:text-teal-400" href="/">
            <span class="sr-only">Home</span>
            <img src="/logo.svg" alt="Logo">
        </a>

        <div class="flex flex-1 items-center justify-end justify-between">
            <nav aria-label="Global" class="block">
                <ul class="flex items-center gap-6 text-sm">
                    <li>
                        <a class="transition hover:text-gray-500/75 dark:hover:text-gray-300" href="/"> Home </a>
                    </li>
                    <li>
                        <a class="transition hover:text-gray-500/75 dark:hover:text-gray-300" href="/about"> About </a>
                    </li>
                </ul>
            </nav>

            <div class="flex items-center gap-4">
                <% if (name) { %>
                    <!-- Show user's name if logged in -->
                    <span class="text-gray-700 dark:text-gray-300">Hello, <%= name %>!</span>
                    <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">Logout</a>
                <% } else { %>
                    <!-- Show Sign Up and Login links if not logged in -->
                    <a href="/signup" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Sign Up</a>
                    <a href="/login" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 ml-4">Log In</a>
                <% } %>
            </div>
        </div>
    </div>
</header>